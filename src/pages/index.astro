---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'ICHQP 2026',
};
---

<Layout metadata={metadata}>
  
  <Hero2
    tagline="ICHQP 2026"
    title="22nd International Conference on Harmonics and Quality of Power"
    image={{
      src: '~/assets/images/skyline_dresden_autumn_semisquare.jpg',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
    content="<i>More information coming soon.</i>"
  >
    <Fragment slot="subtitle">
      <!-- <span class="block mb-1 font-bold text-red-600">1<sup>st</sup> ICHQP workshop</span> -->
      <Image src="~/assets/images/Logo_ICHQP_PES_TUD.png" alt="ICHQP Image" class="my-4 mx-auto max-w-full lg:mx-0 lg:ml-0" width="550" />
      August 31st - September 3rd, 2026 <br />
      Dresden, Germany
    </Fragment>
  </Hero2>

</Layout>
